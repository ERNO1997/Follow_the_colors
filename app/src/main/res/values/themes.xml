<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FollowTheColors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="redON">@color/red_on</item>
        <item name="redOFF">@color/red_off</item>
        <item name="pinkON">@color/pink_on</item>
        <item name="pinkOFF">@color/pink_off</item>
        <item name="purpleON">@color/purple_on</item>
        <item name="purpleOFF">@color/purple_off</item>
        <item name="blueON">@color/blue_on</item>
        <item name="blueOFF">@color/blue_off</item>
        <item name="orangeON">@color/orange_on</item>
        <item name="orangeOFF">@color/orange_off</item>
        <item name="whiteON">@color/white_on</item>
        <item name="whiteOFF">@color/white_off</item>
        <item name="yellowON">@color/yellow_on</item>
        <item name="yellowOFF">@color/yellow_off</item>
        <item name="brownON">@color/brown_on</item>
        <item name="brownOFF">@color/brown_off</item>
        <item name="greenON">@color/green_on</item>
        <item name="greenOFF">@color/green_off</item>

        <item name="dark">@color/dark</item>
        <item name="background_dark">@color/dark</item>
        <item name="background_error">@color/error</item>

        <item name="record">@color/md_green_500</item>
    </style>


    <style name="Theme.FollowTheColors.NoActionBar" parent="Theme.FollowTheColors">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>